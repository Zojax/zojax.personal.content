<tal:block i18n:domain="zojax.personal.content">
  <h1 i18n:translate="">Are you sure you want retract this content item?</h1>

  <tal:block content="structure pagelet:content.type.preview" />

  <form action="retract.html" method="post">
    <div class="z-form-controls">
      <hr />
      <input type="submit" class="z-form-cancelbutton"
             i18n:attributes="value"
	     name="form.retract.cancel" value="Cancel" />
      <input type="submit" class="z-form-button"
             i18n:attributes="value"
	     name="form.retract.content" value="Retract" />
    </div>
  </form>
</tal:block>
